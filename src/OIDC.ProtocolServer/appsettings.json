{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "ApplicationDbContext": "TBD"
  },

  "Authentication": {
    "OIDC": {
      "Issuer": "",
      "ClientId": "",
      "ClientSecret": "",
      "Resource": "",
      "Scopes": "openid profile email",

      "SaveTokens": true,
      "GetClaimsFromUserInfoEndpoint": false
    }
  },

  "ProtocolServer": {
    "UserClaimType": "",

    "ScopeClaims": {
      "openid": [ "sub", "zdv_sid", "zdv_upn", "upn", "security_identifier", "uid" ],
      "uuid": [ "umz_uuid" ],
      "accountname": [ "zdv_accountName" ],
      "roles": [ "role" ],
      "groups": [ "role" ],
      "name": [ "name", "family_name", "given_name" ],
      "email": [ "email" ],
      "phone": [ "phone_number" ],
      "profile": [
        "email",
        "birthdate",
        "name",
        "family_name",
        "given_name",
        "gender",
        "locale",
        "preferred_username",
        "picture",
        "updated_at",
        "website",
        "zoneinfo"
      ],
      "matriculation_number": [ "matriculation_number" ],
      "home_dir": [ "home_directory" ],
      "affiliation": [ "scoped_affiliation" ]
    },

    "IdTokenScopes": [ "name", "email", "roles", "affiliation" ],

    
    "PropertyConverters": {
      "zdvStudentID": "StringConverter",

      "zdvCostCenter": "StringConverter",
      "zdvDateOfBirth": "StringConverter",
      "zdvIDCardImage": "ByteBase64Converter",
      "zdvIDCardImageTimestamp": "StringConverter",
      "zdvLibraryID": "StringConverter"
    },

    "ClaimSources": [
      {
        "ClaimType": "matriculation_number",
        "PropertyName": "zdvStudentId"
      },
      {
        "ClaimType": "role",
        "PropertyName": "msds-tokenGroupNamesGlobalAndUniversal",
        "ClaimValueDenyList": [ "^aobj_.+$", "^www-.+-m$" ]
      }

    ],

    "_CSTemplate": {
      "ClaimType": "",
      "PropertyName": "",
      "ClaimValueDenyList": [ "", "" ]
    }
  },

  "ActiveDirectory": {
    "Connection": {
      "Server": "",
      "BaseDN": ""
    },

    "UserFilter": ""
  }
}
