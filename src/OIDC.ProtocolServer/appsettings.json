{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "ApplicationDbContext": "TBD"
  },

  "Authentication": {
    "OpenIdConnect": {
      "Authority": "",
      "ClientId": "",
      "ClientSecret": "",
      "Resource": "",
      "Scopes": "openid",

      "SaveTokens": false,
      "GetClaimsFromUserInfoEndpoint": false
    },
    "OpenIdConnect-MFA": {
      "Authority": "",
      "ClientId": "",
      "ClientSecret": "",
      "Resource": "",
      "Scopes": "openid",

      "SaveTokens": false,
      "GetClaimsFromUserInfoEndpoint": false
    }
  }, 

  "ProtocolServer": {
    "UserClaimType": "zdv_sid",

    "IdTokenScopes": [ "name", "email", "roles", "affiliation" ],

    "Properties": {
      "zdvStudentID": "string",

      "zdvCostCenter": "string",
      "zdvDateOfBirth": "string",
      "zdvIDCardImage": "byte[]",
      "zdvIDCardImageTimestamp": "DateTime",
      "zdvLibraryID": "string"
    },

    "ClaimSources": [
      {
        "ClaimType": "matriculation_number",
        "PropertyName": "zdvStudentId"
      },
      {
        "ClaimType": "role",
        "PropertyName": "msds-tokenGroupNamesGlobalAndUniversal",
        "ClaimValueDenyList": [ "^aobj_.+$", "^www-.+-m$" ]
      },
      {
        "ClaimType": "zdv_sid",
        "PropertyName": "objectSid",
        "OutputFormat": "SDDL"
      }

    ],

    "_CSTemplate": {
      "ClaimType": "",
      "PropertyName": "",
      "ClaimValueDenyList": [ "", "" ]
    }
  },

  "ActiveDirectory": {
    "Connection": {
      "Server": "",
      "BaseDN": ""
    },

    "UserFilter": ""
  } 
}
