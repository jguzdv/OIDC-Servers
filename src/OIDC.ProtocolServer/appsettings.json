{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore.Authentication": "Error"
    },
    "OpenTelemetry": {
      "LogLevel": {
        "Default": "Warning",
        "Microsoft.AspNetCore.Authentication": "Error",
        "OpenIddict": "Warning",
        "OpenIddict.Server.OpenIddictServerDispatcher": "Information",
        "JGUZDV": "Information"
      },
      "IncludeFormattedMessage": true,
      "IncludeScopes": true,
      "ParseStateValues": true
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "ApplicationDbContext": "-TBD-"
  },

  "Authentication": {
    "OpenIdConnect": {
      "Authority": "-TBD-",
      "ClientId": "-TBD-",
      "ClientSecret": "-TBD-",
      "Resource": "",
      "Scopes": "openid",

      "SaveTokens": false,
      "GetClaimsFromUserInfoEndpoint": false
    },
    "OpenIdConnect-MFA": {
      "Authority": "-TBD-",
      "ClientId": "-TBD-",
      "ClientSecret": "-TBD-",
      "Resource": "",
      "Scopes": "openid",

      "SaveTokens": false,
      "GetClaimsFromUserInfoEndpoint": false
    }
  },

  "DistributedCache": {
    "ConnectionString": "-TBD-",
    "SchemaName": "dbo",
    "TableName": "DistritbutedCache"
  },

  "ProtocolServer": {
    "Issuer": "-TBD-",

    "JWKS": {
      "KeyStoragePath": "-TBD-",
      "CertificatePassword": "-TBD-"
    },

    "SubjectClaimType": "zdv_sub",
    "PersonIdentifierClaimType": "zdv_uuid",

    "DefaultClaimTypes": [
      "amr",
      "mfa_auth_time",
      "mfa_available_methods"
    ],

    "PrincipalClaimProvider": {
      "ClaimTypeMaps": [
        {
          "ClaimType": "amr"
        },
        {
          "ClaimType": "mfa_auth_time"
        },
        {
          "ClaimType": "mfa_available_methods"
        }
      ]
    },

    "ActiveDirectory": {
      "LdapServer": "-TBD-",

      "Properties": {
        "zdvStudentID": "string",

        "zdvCostCenter": "string",
        "zdvDateOfBirth": "string",
        "zdvIDCardImage": "byte[]",
        "zdvIDCardImageTimestamp": "DateTime",
        "zdvLibraryID": "string"
      },

      "ClaimSources": [
        {
          "ClaimType": "sub",
          "PropertyName": "objectGuid",
          "OutputFormat": "guid"
        },
        {
          "ClaimType": "matriculation_number",
          "PropertyName": "zdvStudentId"
        },
        {
          "ClaimType": "role",
          "PropertyName": "msds-tokenGroupNamesGlobalAndUniversal",
          "OutputFormat": "cn",
          "ClaimValueDenyList": [ "^aobj_.+$", "^www-.+-m$" ],
          "Casing": "lower"
        },
        {
          "ClaimType": "zdv_accountName",
          "PropertyName": "sAMAccountName"
        },
        {
          "ClaimType": "zdv_sid",
          "PropertyName": "objectSid",
          "OutputFormat": "sddl"
        },
        {
          "ClaimType": "zdv_sub",
          "PropertyName": "objectGuid",
          "OutputFormat": "guid"
        },
        {
          "ClaimType": "zdv_upn",
          "PropertyName": "userPrincipalName"
        },
        {
          "ClaimType": "zdv_uuid",
          "PropertyName": "serialNumber"
        }
      ]
    },

    "JGUDirectory": {
      "DatabaseConnectionString": "-TBD-"
    },

    "_CSTemplate": {
      "ClaimType": "",
      "PropertyName": "",
      "ClaimValueDenyList": [ "", "" ]
    }
  },

  "OpenTelemetry": {
    "AzureMonitor": {
      "ConnectionString": "secret"
    },
    "ServiceNamespace": "OpenId",
    "ServiceName": "OIDCServer",
    "UseMeter": {
      "MeterName": "oidc.server.meter",
      "MeterVersion": "1.0.0"
    }
  }
}
