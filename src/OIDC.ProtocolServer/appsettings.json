{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "ApplicationDbContext": "TBD"
  },

  "Authentication": {
    "OIDC": {
      "Issuer": "",
      "ClientId": "",
      "ClientSecret": "",
      "Resource": "",
      "Scopes": "openid profile email",

      "SaveTokens": true,
      "GetClaimsFromUserInfoEndpoint": false
    }
  },

  "ProtocolServer": {
    "UserClaimType": "",

    "IdTokenScopes": [ "name", "email", "roles", "affiliation" ],
    
    "Properties": {
      "zdvStudentID": "string",

      "zdvCostCenter": "string",
      "zdvDateOfBirth": "string",
      "zdvIDCardImage": "byte[]",
      "zdvIDCardImageTimestamp": "DateTime",
      "zdvLibraryID": "string"
    },

    "ClaimSources": [
      {
        "ClaimType": "matriculation_number",
        "PropertyName": "zdvStudentId"
      },
      {
        "ClaimType": "role",
        "PropertyName": "msds-tokenGroupNamesGlobalAndUniversal",
        "ClaimValueDenyList": [ "^aobj_.+$", "^www-.+-m$" ]
      }

    ],

    "_CSTemplate": {
      "ClaimType": "",
      "PropertyName": "",
      "ClaimValueDenyList": [ "", "" ]
    }
  },

  "ActiveDirectory": {
    "Connection": {
      "Server": "",
      "BaseDN": ""
    },

    "UserFilter": ""
  }
}
